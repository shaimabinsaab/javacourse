        System.out.println("please enter your second number:");
        int nume2 = sh.nextInt();
        System.out.println(nume1+"+"+nume2+":"+nume1+nume2);
        System.out.println(nume1+"+"+nume2+":"+(nume1-nume2));
       System.out.println(nume1+"x"+nume2+":"+nume1*nume2);
        System.out.println(nume1+"/"+nume2+":"+nume1/nume2);
