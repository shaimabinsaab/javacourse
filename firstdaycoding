        System.out.println("please enter your third number:");
        int third3 = sh.nextInt();

        if(first1>second2 && first1>third3){
            System.out.println("the greatest:"+first1);
        } else if (second2 > first1 && second2 > third3) {
            System.out.println("the greatest:"+second2);
        } else if (third3 > first1 && third3 > second2) {
            System.out.println("the greatest:"+third3);
        }

        //seventh
        System.out.println("please enter number from 1 to 7");
        int yournumber = sh.nextInt();

        switch (yournumber){
        case 1 : System.out.println("sunday");
            break;
        case 2 :System.out.println("monday");
            break;
        case 3 :System.out.println("tuesday");
            break;
        case 4 : System.out.println("wednesday");
                break;
        case 5 : System.out.println("thursday");
                break;
        case 6 : System.out.println("friday");
